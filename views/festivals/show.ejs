<%- include("../partials/header") %>

<!-- Festival Name -->
<h1><%= festival.name %></h1>

<!-- Image -->
<img src="<%= festival.image %>" alt="">

<!-- Festival Description -->
<p><%= festival.description %></p>

<p>
    <a class="btn btn-success" href="/festivals">Go Back</a>
    <a class="btn btn-success" href="/festivals/<%= festival._id %>/comments/new">Add a Review</a>
</p>
<!-- Comments -->
<% festival.comments.forEach(function(comment){ %>
    <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
<% }); %>

<%- include("../partials/footer") %>