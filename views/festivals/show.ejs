<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">RaveReviews</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <a class="btn btn-success" href="/festivals">View All Festivals</a>
            <!-- Map goes here -->
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= festival.image %>" alt="">
                <div class="caption-full caption">
                    <h4 class="pull-right">May 15th - 17th, 2020</h4> <!--Put cost or dates here-->
                    <h4><a href=""><%= festival.name %></a></h4> <!--Will eventually link to festival website-->
                    <p><%= festival.description %></p>
                    <p><em>Submitted by <%= festival.author.username %></em></p>
                    <% if (currentUser && festival.author.id.equals(currentUser._id)){ %> <!--Only show edit/delete buttons if festival created by currently logged in user-->
                        <button class="btn btn-warning"><a href="/festivals/<%= festival._id %>/edit">Edit</a></button>
                        <form class="deleteForm" action="/festivals/<%= festival._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                    <!-- Insert stars + review count -->
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/festivals/<%= festival._id %>/comments/new">Leave a Review</a>
                </div>
                <hr>
                <!-- Comments -->
                <% festival.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong> <!--Rating will go to left of author-->
                            <span class="pull-right">10 days ago</span> <!--Will eventually be the date-->
                            <p><%= comment.text %></p>
                            <% if (currentUser && comment.author.id.equals(currentUser._id)){ %> <!--Only show edit/delete buttons for comments made by user currently logged in-->
                                <a class="btn btn-xs btn-warning" href="/festivals/<%= festival._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                <form class="deleteForm" action="/festivals/<%= festival._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST"> <!--Need to change id?-->
                                    <button class="btn btn-xs btn-danger">Delete</button> 
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>