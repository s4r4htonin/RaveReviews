<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="formHeader">Edit <%= festival.name %></h1>
        <div class="formStyling">
            <form action="/festivals/<%= festival._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="pull-left" for="festival[name]">Festival Name</label>
                    <input class="form-control" type="text" value="<%= festival.name %>" name="festival[name]">
                </div>
                <div class="form-group">
                    <label class="pull-left" for="festival[website]">Website Url</label>
                    <input class="form-control" type="text" value="<%= festival.website %>" name="festival[website]">
                </div>
                <div class="form-group">
                    <label class="pull-left" for="festival[location]">Location</label>
                    <input class="form-control" type="text" value="<%= festival.location %>" name="festival[location]">
                </div>
                <div class="form-group">
                    <label class="pull-left" for="festival[dates]">Festival Dates</label>
                    <input class="form-control" type="text" value="<%= festival.dates %>" name="festival[dates]">
                    <!-- Edit later to have dropdown for dates -->
                </div>
                <div class="form-group">
                    <label class="pull-left" for="festival[established]">Year Established</label>
                    <input class="form-control" type="text" value="<%= festival.established %>" name="festival[established]">
                </div>
                <div class="form-group">
                    <label class="pull-left" for="festival[image]">Image Url</label>
                    <input class="form-control" type="text" value="<%= festival.image %>" name="festival[image]">
                </div>
                <div class="form-group">
                    <label class="pull-left" for="festival[description]">Festival Description</label>
                    <textarea class="form-control" name="festival[description]"><%= festival.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/festivals">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>