<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to RaveReviews!</h1>
            <p>Find and review music festivals from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/festivals/new" role="button">Add a new festival</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular festivals</h3>
        </div>
    </div>

    <div class="row">
        <% for (let i = 0; i < festivals.length; i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= festivals[i].image %>" style="height: 150px">   
                    <div class="caption">
                        <h4><%= festivals[i].name %></h4>
                    </div>
                </div>
            </div>
        <% } %>
    </div> 
</div>

<%- include("partials/footer") %>