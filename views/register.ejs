<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="formHeader">Register</h1>
        <div class="formStyling">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label class="pull-left" for="email">Email</label>
                    <input type="email" name="email" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <label class="pull-left" for="username">Username</label>
                    <input class="form-control" type="text" name="username" required>
                </div>
                <div class="form-group">
                    <label class="pull-left" for="password">Password</label>
                    <input class="form-control" type="password" name="password" required>
                </div>
                <div class="form-group">
                    <label class="pull-left" for="email">Admin Code</label>
                    <input class="form-control" type="text" name="adminCode" placeholder="optional">
                </div>
                <div class="form-group">
                    <button class="btn bnt-lg btn-primary btn-block">Sign Up</button>
                </div>
            </form>
            <a href="/festivals">Go Back</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>