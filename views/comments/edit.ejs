<<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="formHeader">Edit a Review</h1>
        <div class="formStyling">
            <form action="/festivals/<%= festival_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/festivals/<%= festival_id %>">Go Back</a> <!--Named variable festival_id passed in from js -->
        </div>
    </div>
</div>

<%- include("../partials/footer") %>