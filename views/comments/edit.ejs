<<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit a Review</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/festivals/<%= festival_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/festivals/<%= festival_id %>">Go Back</a> <!--Named variable festival_id passed in from js -->
        </div>
    </div>
</div>

<%- include("../partials/footer") %>