<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="formHeader"">Add a Review of <%= festival.name %></h1>
        <div sclass="formStyling"">
            <form action="/festivals/<%= festival._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/festivals/<%= festival._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>